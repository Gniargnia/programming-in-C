{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "clang build active file",
      "type": "shell",
      "command": "clang",
      "args": [
        "-g3",
        "-O0",
        "-Wall",
        "-Wextra",
        "-std=c11",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        "-lcs50"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Compilation avec clang pour CS50"
    }
  ]
}